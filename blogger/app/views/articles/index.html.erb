<html>
<head>
</head>
<body>
	<h1>All Articles</h1>
	<ul id="articles">
		<% @articles.each do |article| %>
			<li>
				<%= link_to article.title, article_path(article), class: 'article_title' %>
			</li>
		<% end %>
	</ul>
	<% if logged_in? %>
	<br><p><%= link_to "Create new article", new_article_path %></p>
	<% end %>
</body>
</html>